<UserControl x:Class="LagDaemon.WWB.WWBMain.Controls.ProjectListItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:cmd="clr-namespace:LagDaemon.MVVM.Commands;assembly=LagDaemon.MVVM.CommandManagement"
             xmlns:local="clr-namespace:LagDaemon.WWB.WWBMain"
             xmlns:vm="clr-namespace:LagDaemon.WWB.ViewModels;assembly=LagDaemon.WWB.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.CommandBindings>
        
    </UserControl.CommandBindings>
    <Grid>
        <Border CornerRadius="5" BorderBrush="Black" BorderThickness="2" Margin="4" Padding="4">
            <StackPanel>
                <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="DarkBlue" />
                <TextBlock Text="{Binding CreationDate}" FontStyle="Italic"  Foreground="DarkBlue" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
